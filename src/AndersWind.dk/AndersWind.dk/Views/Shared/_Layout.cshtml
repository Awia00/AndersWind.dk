@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="Portfolio site for Anders Wind" content="">
    <meta name="Anders Wind" content="">
    <title>@ViewData["Title"] - AndersWind.dk</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    
    <!-- Custom Fonts -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="//fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/font-awesome/css/font-awesome.min.css" type="text/css">

    <!-- Plugin CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/animate.min.css" type="text/css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/freelancer.css" type="text/css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/creative.css" type="text/css">
    
 @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body id="page-top">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; 2017 - AndersWind.dk</p>
    </footer>

<environment names="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous"
            integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
            asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
            crossorigin="anonymous"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
    </script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>

<!-- Plugin JavaScript -->
<script src="~/lib/bootstrap/dist/js/jquery.easing.min.js"></script>
<script src="~/lib/bootstrap/dist/js/jquery.fittext.js"></script>
<script src="~/lib/bootstrap/dist/js/wow.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/lib/bootstrap/dist/js/creative.js"></script>

@RenderSection("Scripts", required: false)
    
    <!--Styles using the model-->
<style>
    .bg-primary {
        background-color: @Model.BackgroundColor;
    }
    .btn-primary {
        background-color: @Model.BackgroundColor;
        border-color: @Model.BackgroundColor;
    }
    .btn-primary:hover,
    .btn-primary:focus,
    .btn-primary.focus,
    .btn-primary:active,
    .btn-primary.active,
    .open > .dropdown-toggle.btn-primary {
        border-color: @Model.BackgroundColorFocus;
        background-color: @Model.BackgroundColorFocus;
    }
    .btn-primary.disabled,
    .btn-primary[disabled],
    fieldset[disabled] .btn-primary,
    .btn-primary.disabled:hover,
    .btn-primary[disabled]:hover,
    fieldset[disabled] .btn-primary:hover,
    .btn-primary.disabled:focus,
    .btn-primary[disabled]:focus,
    fieldset[disabled] .btn-primary:focus,
    .btn-primary.disabled.focus,
    .btn-primary[disabled].focus,
    fieldset[disabled] .btn-primary.focus,
    .btn-primary.disabled:active,
    .btn-primary[disabled]:active,
    fieldset[disabled] .btn-primary:active,
    .btn-primary.disabled.active,
    .btn-primary[disabled].active,
    fieldset[disabled] .btn-primary.active {
        border-color: @Model.BackgroundColor;
        background-color: @Model.BackgroundColor;
    }
    .btn-primary .badge {
        color: @Model.BackgroundColor;
    }
    .navbar-brand {
        color: @Model.BackgroundColor;
    }
    hr {
        border-color: @Model.BackgroundColor;
    }
    .text-primary {
        color: @Model.BackgroundColor;
    }
    a {
        color: @Model.BackgroundColor;
    }
    a:focus, a:hover {
        color: @Model.BackgroundColorFocus;
    }
    .navbar-default .navbar-header .navbar-brand {
        color: @Model.BackgroundColor;
    }
    .navbar-default .navbar-header .navbar-brand:hover,
    .navbar-default .navbar-header .navbar-brand:focus {
        color: @Model.BackgroundColorFocus;
    }
    .navbar-default .nav > li > a:hover,
    .navbar-default .nav > li > a:focus:hover {
        color: @Model.BackgroundColor;
    }
    .navbar-default .nav > li.active > a,
    .navbar-default .nav > li.active > a:focus {
        color: @Model.BackgroundColor !important;
    }
    .portfolio-box .portfolio-box-caption {
        background: @Model.BackgroundColor;
    }
    .btn-outline:hover,
    .btn-outline:focus,
    .btn-outline:active,
    .btn-outline.active {
        color: @Model.BackgroundColorFocus;
    }
    .navbar-default.affix .navbar-header .navbar-brand {
        color: @Model.BackgroundColor;
    }

    .navbar-default.affix .navbar-header .navbar-brand:hover,
    .navbar-default.affix .navbar-header .navbar-brand:focus {
        color: @Model.BackgroundColorFocus;
    }
    .navbar-default.affix .nav > li>a:hover,
    .navbar-default.affix .nav>li>a:focus:hover {
        color: @Model.BackgroundColor;
    }
</style>
</body>
</html>
